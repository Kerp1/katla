<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.chalmers.katla.activities.SpeechToText"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/Grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/speechToTextContactField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:layout_above="@+id/relativeLayout"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/speechToTextMainText"
            android:textSize="28dp" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/speechToTextSecondText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="32dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speechToTextButton"
            android:clickable="true"
            android:layout_below="@+id/speechToTextSecondText"
            android:layout_centerHorizontal="true"
            android:src="@drawable/microfonesmall" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Send"
            android:id="@+id/speechToTextSendButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/Blue"
            android:layout_toEndOf="@+id/speechToTextChangeInputButton"
            android:layout_centerHorizontal="true"
            android:textColor="@color/White" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Remove"
            android:id="@+id/speechToTextRemoveButton"
            android:background="@color/Orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/speechToTextChangeInputButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Compose message"
            android:id="@+id/speechToTextChangeInputButton"
            android:background="@color/GreenLight"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/speechToTextContactField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:phoneNumber="true"
        android:textSize="32dp"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/speechToTextCountField"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speechToTextListenButton"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:src="@drawable/listenicon"
        android:clickable="true" />

</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.katla.activities.TimeInputFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeDialogTimePicker"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_above="@+id/timeDialogTimePicker"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/timeDialogTimePicker" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/timeDialogDoneButton"
            android:layout_gravity="left|bottom"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_below="@+id/timeDialogTimePicker"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</FrameLayout>

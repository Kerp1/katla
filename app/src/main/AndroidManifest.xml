<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.katla" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.SwipeMainActivity"
            android:label="@string/title_activity_swipe_main" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SendMessage"
            android:label="@string/title_activity_send_message"
            android:parentActivityName=".activities.MainActivity" >
        </activity>
        <activity
            android:name=".views.messageView"
            android:label="@string/title_activity_message_view" >
        </activity>
        <activity
            android:name=".activities.ReceiveMessage"
            android:label="@string/title_activity_receive_message" >
        </activity>
        <activity
            android:name=".activities.TextToSpeechActivity"
            android:label="@string/title_activity_text_to_speech" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
